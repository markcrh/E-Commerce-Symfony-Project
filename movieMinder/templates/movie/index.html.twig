{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}

{% block header %}
	{% include 'components/header.html.twig' %}
{% endblock %}
<main class="flex flex-col items-center flex-grow">

    <h1>Movie index</h1>

    <div class="flex flex-wrap justify-center flex-grow w-[85%] min-h-screen overflow-y-auto gap-5">
        {% for movie in movies %}
            <div class="flex flex-col text-white w-[200px] h-full hover:scale-110 transition-transform gap-2.5">
                <img class="w-[200px]" src="{{ movie.poster }}" alt="{{ movie.title }} ">
                <span class="text-center font-bold"> {{ movie.title }}</span>
            </div>
        {%  endfor %}
    </div>

    <a href="{{ path('app_movie_new') }}">Create new</a>

    </main>

{% block footer %}
	{% include 'components/footer.html.twig' %}
{% endblock %}

{% endblock %}
