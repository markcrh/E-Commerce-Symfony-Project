{% extends 'base.html.twig' %}

{% block title %}My Movies
{% endblock %}


{% block body %}

    <div class="flex flex-col flex-grow">

        {% block header %}
            {% include 'components/headerUser.html.twig' %}
        {% endblock %}

        <div class="flex flex-col justify-center w-full h-auto gap-10 pt-20 pb-16 pl-24 pr-22">
            <h2 class="text-4xl text-white font-extrabold mb-2">MY MOVIES</h2>

            <div class="flex flex-row gap-6">
                <h2 class="text-2xl font-extrabold bg-transparent w-[13%] text-center text-orange-600 rounded-3xl border-2 border-orange-600 p-2">WATCHED</h2>
                <a href="{{ path('show_list') }}" class="text-2xl font-extrabold bg-transparent w-[13%] text-center text-gray-400 rounded-3xl border-2 border-gray-400 p-2 hover:text-orange-600 hover:border-orange-600">PENDING</a>
            </div>
            {% if watchedMovies is empty %}
            <div class="flex flex-col justify-center items-center gap-6">
                <h2 class="text-white text-2xl font-bold text-center">Your list is empty</h2>
                <a href="{{ path('app_movie_index') }}"
                   class="flex flew row items-center text-white font-extrabold rounded-2xl text-2xl px-4 py-2 text-center gap-4 border-2 border-orange-500">
                    <h3>ADD MOVIES</h3>
                    <img class="aspect-square w-[30px] group-hover:hidden"
                         src="/img/addIcon.png" alt="add to list">
                </a>
            </div>
            {% else %}
            <div class="flex flex-wrap justify-left gap-10">
                {% for movie in movies %}
                    {% if movie.id in watchedMovies %}
                        <div class="group relative flex flex-col text-white w-[200px] h-full gap-2.5">

                            <div class="absolute group-hover:flex justify-center items-center self-start mr-1.5 w-[30px] h-[40px]">
                                <a href="{{ path('add_movie_user', {'id': movie.id}) }}">
                                    <img class="aspect-square w-[25px] hidden group-hover:block"
                                         src="/img/remove-mark.svg" alt="add to list">
                                </a>
                            </div>

                            <div class="absolute group-hover:flex justify-center items-center self-end mr-1.5 w-[30px] h-[40px]">
                                <img class="aspect-square w-[30px] mt-[5px] group-hover:hidden"
                                     src="/img/watched-mark.svg" alt="add to list">
                                <a href="{{ path('app_user_add_watched', {'movieId': movie.id}) }}">
                                    <img class="aspect-square w-[30px] hidden group-hover:block"
                                         src="/img/not-watched-mark.svg" alt="add to list">
                                </a>
                            </div>
                            <img data-movie-id="{{ movie.id }}"
                                 class="openPop rounded-md w-[200px] h-[300px] group-hover:outline group-hover:outline-offset-0 group-hover:outline-orange-500"
                                 src="{{ movie.poster }}" alt="{{ movie.title }}">
                            <span class="text-center font-bold group-hover:text-orange-500">{{ movie.title }}</span>
                        </div>
                    {% endif %}
                {% endfor %}
                {% endif %}

            </div>
        </div>
    </div>

    <div id="overlay" class="fixed inset-0 bg-black opacity-70 hidden z-40"></div>
    {% for movie in movies %}
        <div id="popup-{{ movie.id }}" class="hidden fixed inset-0 flex items-center justify-center z-50 popup">
            <div class="max-w-[50%] w-full">
                <div class="block rounded-3xl shadow-lg bg-neutral-800">
                    <div class="g-0 lg:flex lg:flex-wrap">
                        <div class="px-4 md:px-0 lg:w-7/12 lg:order-last">
                            <div class="md:mx-6 md:p-8">
                                <div class="ml-[95%] mt-2">
                                    <button id="closePop-{{ movie.id }}" class="closePop">
                                        <img class="w-6 mb-[10%]" src="{{ asset('img/x.svg') }}" alt="close"/>
                                    </button>
                                </div>
                                <div>
                                    <p class="text-4xl font-bold text-left mt-6 mb-8 text-gray-200">{{ movie.title }}</p>
                                    <div class="flex flex-row text-white text-2xl gap-12 mb-4">
                                        <h3><b>{{ movie.year }} </b></h3>
                                        <h3><b>{{ movie.duration }} min </b></h3>
                                    </div>
                                    <div>
                                        <img src="{{ asset('img/stars.svg') }}" class="w-3/4 rounded-3xl mb-6" alt="stars">
                                    </div>

                                    <div class="relative mb-4">
                                        <p class="text-white text-xl mb-8">{{ movie.synopsis }}</p>

{# desde aqui al endif son es lo de los ratings #}
<div class="mt-4">

	<h3 class="mt-2 text-xl">Rating total:{{movie.rating}}</h3>


</div>

{% if app.user %}
	<h3 class="mt-4 text-lg">Rate this movie:</h3>
	<form action="{{ path('app_movie_rate', {'id': movie.id}) }}" method="POST" class="mt-2">
		<label for="rating" class="mr-2">Your rating (1-10):</label>
		<input type="number" id="rating" name="rating" min="1" max="10" required class="p-2 border border-gray-300 rounded-md text-black bg-white" value="{{ userRating is not null ? userRating : '' }}">
		<button type="submit" class="ml-2 bg-orange-500 text-black p-2 rounded-md">Submit Rating</button>
	</form>
{% else %}
	<p class="mt-4">You need to be logged in to rate movies.</p>
{% endif %}

                                        <div class="mb-2 pb-1 pt-1 text-center">
                                            <a href="{{ path('app_register') }}">
                                                <button
                                                        class="rounded-3xl text-lg mb-3 inline-block w-3/4 font-bold px-6 pb-2 pt-2.5 uppercase leading-normal text-white shadow-lg transition duration-150 ease-in-out hover:shadow-xl focus:shadow-xl focus:outline-none focus:ring-0 active:shadow-lg"
                                                        type="submit"
                                                        style="background: linear-gradient(to right, #ee7724, #d8363a);">
                                                    WATCH TRAILER
                                                </button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center rounded-b-lg lg:w-5/12 lg:rounded-e-lg lg:rounded-bl-none">
                            <img src="{{ movie.poster }}" class="h-full w-full object-cover rounded-3xl" alt="movie poster">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    {% block javascripts %}
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Open popup logic
                const openPopupBtns = document.querySelectorAll('.openPop');
                openPopupBtns.forEach(button => {
                    button.addEventListener('click', function() {
                        const movieId = button.getAttribute('data-movie-id');
                        const popup = document.getElementById('popup-' + movieId);
                        const overlay = document.getElementById('overlay');

                        // Show the popup and overlay
                        popup.classList.remove('hidden');  // Show the popup
                        popup.classList.add('flex');       // Apply flexbox
                        overlay.classList.remove('hidden'); // Show the overlay
                    });
                });
                const closePopupBtns = document.querySelectorAll('.closePop');
                closePopupBtns.forEach(button => {
                    button.addEventListener('click', function() {
                        const movieId = button.id.split('-')[1];
                        const popup = document.getElementById('popup-' + movieId);
                        const overlay = document.getElementById('overlay');

                        // Hide the popup and overlay
                        popup.classList.add('hidden');  // Hide the popup
                        popup.classList.remove('flex'); // Remove flexbox layout
                        overlay.classList.add('hidden'); // Hide the overlay
                    });
                });
            });
        </script>
    {% endblock %}

    {% block footer %}
        {% include 'components/footer.html.twig' %}
    {% endblock %}
    </div>
{% endblock %}
